<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FAST FOOD</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/index.css">
  <style>
    .food_box {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
    }
  </style>
</head>
<body>
 
  <header class="header">
    <div class="container">
      <div class="header_inner d-flex justify-content-between align-items-center">
        <a href="#" class="header_logo_link">
          <img src="https://c8.alamy.com/comp/PCYG1J/pizzeria-fast-food-logo-or-label-happy-chef-holding-pizza-and-scapula-in-hands-vector-illustration-PCYG1J.jpg" alt="logo" class="logo_img" width="150px" height="150px">
        </a>
        <div class="header_box d-flex align-items-center">
          <ul class="header_list d-flex gap-3">
            <li class="header_items"><a href="#" class="header_item_link">Home</a></li>
            <li class="header_items"><a href="#" class="header_item_link">About</a></li>
            <li class="header_items"><a href="#" class="header_item_link">Favourite</a></li>
          </ul>
          <button class="btn btn-danger ms-5">Login</button>
        </div>
      </div>
    </div>
  </header>

  <!-- Slider -->
  <div id="carouselExampleDark" class="carousel carousel-dark slide">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active" data-bs-interval="10000">
        <img src="https://img.freepik.com/free-photo/top-view-fast-food-mix-mozzarella-sticks-club-sandwich-hamburger-mushroom-pizza-caesar-shrimp-salad-french-fries-ketchup-mayo-cheese-sauces-table_141793-3998.jpg?semt=ais_hybrid" class="slider_img d-block w-100" alt="...">
      </div>
      <div class="carousel-item" data-bs-interval="2000">
        <img src="https://img.freepik.com/free-photo/tasty-burger-isolated-white-background-fresh-hamburger-fastfood-with-beef-cheese_90220-1063.jpg?t=st=1729604476~exp=1729608076~hmac=83b0f285ca907e95c9c697f45b84b5b874168ea7132f7531a0b8dc4052b13ce2&w=740" class="slider_img d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTBq83EH1FiQG72-xl0wPXPc8Hjeii79f2OuYA7aYDN50ERz9hKMU8UyOgbfWOwFsNgC34&usqp=CAU" class="slider_img d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <!-- slider -->

  <!-- food -->
  <div class="food">

    <!-- modal -->
    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="container">
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/postFood" method="POST"> 
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="title..." name="title">
            </div>
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="description..." name="description">
            </div>
            <div class="input-group mb-3">
              <input type="number" class="form-control" placeholder="old price..." name="old_price">
            </div>
            <div class="input-group mb-3">
              <input type="number" class="form-control" placeholder="new price..." name="new_price">
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>

    <div class="container">
      <div class="food_inner">
        <h2 class="food_parag">Food</h2>
        <div class="food_box">
          <% food.forEach(item => { %>
            <div class="card" style="width: 18rem;">
              <img src="<%= item.img %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h4 class="card-title"><%= item.title %></h4>
                <p class="card-text"><%= item.desc %></p>
                <p class="old_price"><%= item.old_price %></p>
                <p class="new_price"><%= item.new_price %></p>
                <a href="#" class="btn btn-primary">Show</a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
